<%
	if @user.profile == "master"
		profile     = "master"
		background  = "rgba(55, 55, 94, 0.8);" 
		menu        = "#37375E"
		hover_visit = "#1D1D38" 
	else
		if @colors != nil  &&
			@colors.count > 0
			background  = "rgba(#{@colors[0]}, 0.8);" 
			menu        = "#{@colors[1]}"
			hover_visit = "#{@colors[2]}"
		else
			background  = "rgba(90, 90, 90, 0.8);" 
			menu        = "#636363"
			hover_visit = "#4F4F4F"
		end

		profile     = "player"
	end
%>

<style>	
	<%=
		"
		.sidebar ul li {
	  		background-color: #{menu};
	  	}
		.sidebar ul li a:hover {
			background-color: #{hover_visit};
		}
		.sibar ul li a:visited {
		 	background-color: #{hover_visit}; 
		}
		"
	%>
</style>

<aside class="sidebar"
	style="background-color: <%= background %>">
	<div class="avatar">					
		<% if profile == "master" %>
			<%= image_tag("avatar_master.png", :alt => "player") %>
		<% else %>
			<%= image_tag("player.png", :alt => "master") %>
		<% end %>
	</div>
	<div class="nickname">
		<%= @user.nikename %>
	</div>
	<div class="nickname" 
		style="font-size: 1.5em;
		margin-top: -.5em;">
		<% if @name_team %>
			<%=  @name_team %>
		<% end %>
	</div>
	<ul class="nav nav-sidebar">
		<li>
			<%=
				link_to "Home",
				index_users_path,
				class: "home"
			%>
		</li>
		<li>
			<%= 
				link_to "Editar Perfil",
				index_users_path,
				class: "feather"
			%>
		</li>
		<li>
			<%= 
				link_to "Times",
				root_path,
				class: "team"
			%>
		</li>
		<li>
			<%= 
				link_to "Rancking",
				index_users_path,
				class: "trophy"
			%>
		</li>
		<li>
			<%= 
				link_to "Chat",
				index_users_path,
				class: "chat"
			%>
		</li>
		<li>
			<%= 
				link_to "Configurações",
				index_users_path,
				class: "config"
			%>
		</li>
		<li>
			<%= 
				link_to "Regras",
				index_users_path,
				class: "rules"
			%>
		</li>		
	</ul>

	<% if @stopwatch != nil %>
		<div onload="show();"
			style="position: fixed;
			padding: 2em 0 0 1.5em;">	                	
            <div class="digital" id="time"
            	style="font-size: 3em;
					text-align: center;
					color: #F2F2F2;">
            	00:00:00:000
            </div>
        </div>
	<% end %>	
</aside>